# EspoCRM Environment Configuration for Dokploy
# Copy this file to .env and update with your values

# Application Settings
APP_PORT=8080
SITE_URL=https://crm.kwameoilandgas.ao
APP_ENV=production
APP_DEBUG=false

# Database Configuration (Internal Docker Network)
DB_HOST=mysql
DB_PORT=3306
DB_NAME=espocrm
DB_USER=espocrm
DB_PASSWORD=espocrm123
DB_ROOT_PASSWORD=root123

# Admin Credentials (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_EMAIL=admin@yourdomain.com

# PHPMyAdmin (optional)
PMA_PORT=8081

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_SECURITY=tls
SMTP_FROM_NAME=EspoCRM
SMTP_FROM_ADDRESS=noreply@kwameoilandgas.ao

# Security
APP_KEY=base64:your_32_character_random_string_here
SALT=your_random_salt_string

# PHP Configuration
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=180
PHP_POST_MAX_SIZE=50M
PHP_UPLOAD_MAX_FILESIZE=50M
PHP_MAX_INPUT_TIME=180

# Timezone
TIMEZONE=UTC

# Cron Job Settings
CRON_ENABLED=true
CRON_MIN_INTERVAL=1

# Cache Settings
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# Session Configuration
SESSION_LIFETIME=120

# File Storage
MAX_FILE_SIZE=50M
ALLOWED_FILE_EXTENSIONS=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,png,jpg,jpeg,gif,webp,svg,zip,rar

# WebSocket Configuration (optional)
WEBSOCKET_ENABLED=false
WEBSOCKET_PORT=8080
WEBSOCKET_SSL_ENABLED=false

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_TIME=02:00

# Monitoring
MONITORING_ENABLED=true
LOG_LEVEL=warning

# Dokploy Specific
DOKPLOY_DOMAIN=crm.kwameoilandgas.ao
DOKPLOY_URL=https://crm.kwameoilandgas.ao
DOKPLOY_DB_PASSWORD=your_secure_database_password
DOKPLOY_DB_ROOT_PASSWORD=your_secure_root_password
DOKPLOY_ADMIN_PASSWORD=your_secure_admin_password
# EspoCRM Production Configuration for Kwame Oil and Gas
# Domain: crm.kwameoilandgas.ao

# Application Settings
APP_PORT=80
SITE_URL=https://crm.kwameoilandgas.ao
APP_ENV=production
APP_DEBUG=false

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=espocrm_kwame
DB_USER=espocrm_user
DB_PASSWORD=KwameOilGas2024_DB!@#
DB_ROOT_PASSWORD=KwameRoot2024_SQL!@#

# Admin Credentials (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=KwameAdmin2024!@#
ADMIN_EMAIL=admin@kwameoilandgas.ao

# PHPMyAdmin (optional - disable in production for security)
PMA_PORT=8081

# Email Configuration (SMTP)
# Update with your actual email provider settings
SMTP_HOST=mail.kwameoilandgas.ao
SMTP_PORT=587
SMTP_USER=crm@kwameoilandgas.ao
SMTP_PASSWORD=your_email_password_here
SMTP_SECURITY=tls
SMTP_FROM_NAME=Kwame Oil and Gas CRM
SMTP_FROM_ADDRESS=noreply@kwameoilandgas.ao

# Security (Generate new keys for production!)
APP_KEY=base64:KwameOilGas2024SecureKey32chars!
SALT=KwameOilGasSalt2024RandomString

# PHP Configuration
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=180
PHP_POST_MAX_SIZE=100M
PHP_UPLOAD_MAX_FILESIZE=100M
PHP_MAX_INPUT_TIME=180

# Timezone (Angola)
TIMEZONE=Africa/Luanda

# Cron Job Settings
CRON_ENABLED=true
CRON_MIN_INTERVAL=1

# Cache Settings
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# Session Configuration
SESSION_LIFETIME=120

# File Storage
MAX_FILE_SIZE=100M
ALLOWED_FILE_EXTENSIONS=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,png,jpg,jpeg,gif,webp,svg,zip,rar,csv

# WebSocket Configuration (optional)
WEBSOCKET_ENABLED=false
WEBSOCKET_PORT=8080
WEBSOCKET_SSL_ENABLED=true

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_TIME=02:00

# Monitoring
MONITORING_ENABLED=true
LOG_LEVEL=warning

# Dokploy Specific
DOKPLOY_DOMAIN=crm.kwameoilandgas.ao
DOKPLOY_URL=https://crm.kwameoilandgas.ao
DOKPLOY_DB_PASSWORD=KwameOilGas2024_DB!@#
DOKPLOY_DB_ROOT_PASSWORD=KwameRoot2024_SQL!@#
DOKPLOY_ADMIN_PASSWORD=KwameAdmin2024!@#

# Company Specific Settings
COMPANY_NAME=Kwame Oil and Gas
COMPANY_URL=https://kwameoilandgas.ao
COMPANY_LOGO_URL=https://kwameoilandgas.ao/logo.png

# Language Settings
DEFAULT_LANGUAGE=pt_BR
AVAILABLE_LANGUAGES=pt_BR,en_US,pt_PT

# Regional Settings
DATE_FORMAT=DD/MM/YYYY
TIME_FORMAT=HH:mm
CURRENCY=AOA
CURRENCY_SYMBOL=Kz
THOUSAND_SEPARATOR=.
DECIMAL_MARK=,

# IMPORTANT NOTES:
# 1. Change all passwords before deploying to production!
# 2. Generate new APP_KEY and SALT values
# 3. Update SMTP settings with your actual email provider
# 4. Consider disabling PHPMyAdmin in production
# 5. Ensure DNS is properly configured for crm.kwameoilandgas.ao
# 6. SSL certificate will be automatically generated by Dokploy via Let's Encrypt